<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".control.AvailableTravelsDetails"
    android:orientation="vertical">


        <TextView
            android:id="@+id/available_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/available_details_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/available_details_dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/available_details_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/available_details_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp"
